{
  "compilerOptions": {
    "baseUrl": "./packages",

    "module": "esnext",
    "target": "es2017",
    "jsx": "react",

    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "alwaysStrict": true,
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "composite": true,
    "build": true,

    "paths": {
      "loom-core": ["loom-core/src"]
    }
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}