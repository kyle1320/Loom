{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2017",
    "lib": ["ES2017"],
    "jsx": "react",

    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "alwaysStrict": true,
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "newLine": "lf",
    "noEmitOnError": true
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "**/dist",
    "**/__tests__",
    "**/node_modules"
  ]
}