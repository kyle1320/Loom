{
  "name": "loom",
  "version": "1.0.0",
  "repository": "https://github.com/kyle1320/loom",
  "author": "Kyle Cutler <kyle1320@gmail.com>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "lint": "eslint packages --ext js,ts,jsx,tsx",
    "typecheck": "tsc --noEmit",
    "verify": "yarn run typecheck && yarn run lint",
    "test": "jest",
    "build-data": "cd packages/loom-data && yarn run build",
    "build-core": "cd packages/loom-core && yarn run build",
    "ui": "cd packages/loom-ui && yarn run dev",
    "ui-dist": "cd packages/loom-ui && yarn run dist"
  },
  "workspaces": [
    "packages/*"
  ]
}
