{
    "env": {
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "no-console": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "max-len": [
            "error",
            {
                "code": 80,
                "ignoreComments": true
            }
        ],
        "no-debugger": "error",
        "no-implied-eval": "error",
        "no-with": "error",
        "wrap-iife": "error",
        "comma-spacing": "error",
        "new-parens": "error",
        "new-cap": [
            "error",
            {
                "newIsCap": true,
                "capIsNew": false
            }
        ],
        "no-lonely-if": "error",
        "no-multiple-empty-lines": "error",
        "no-tabs": "error",
        "nonblock-statement-body-position": "error",
        "spaced-comment": [
            "error",
            "always",
            {
                "block": {
                    "exceptions": ["*"],
                    "balanced": true
                }
            }
        ],
        "keyword-spacing": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "ignore",
                "asyncArrow": "always"
            }
        ],
        "space-before-blocks": "error",
        "block-spacing": "error"
    }
}